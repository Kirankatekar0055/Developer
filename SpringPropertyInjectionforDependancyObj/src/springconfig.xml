<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
               
    <bean id="a1" class="com.spring.model.Address">
    
    <property name="city" value="Karad"></property>
    <property name="state" value="MH"></property>
    <property name="country" value="India"></property>
    </bean>
    
    <bean id="e1" class="com.spring.model.Employee">
    
    
    <property name="id" value="12"></property>
    <property name="name" value="Kiran"></property>
    <property name="salary" value="2000"></property>
    <property name="add"><ref bean="a1"></ref> </property>
    </bean>         
  </beans>             